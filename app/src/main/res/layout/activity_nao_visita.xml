<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.libertsolutions.washington.apppropagandista.Controller.NaoVisita"
    >

    <android.support.v7.widget.CardView
        style="@style/Widget.Propagandista.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/txtNomeMedico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textCapWords"
                        android:singleLine="true"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:selectAllOnFocus="true"
                        android:hint="@string/hintNomeMedico"
                        >

                        <requestFocus />
                    </EditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/txtDataCompromisso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:singleLine="true"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:hint="@string/hintTxtDataCompromisso"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/hintDetalhes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/txtDetalhes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:imeOptions="actionDone"
                        android:gravity="top"
                        android:singleLine="true"
                        android:selectAllOnFocus="true"
                        android:hint="@string/hintMotivo"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                style="@style/Button"
                android:id="@+id/btnIniciar"
                android:text="NÃ£o Visita"
                android:background="@color/visita_naovisita"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
