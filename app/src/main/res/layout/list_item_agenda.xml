<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    >

    <View
        android:id="@+id/view_status"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/visita_pendente"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/view_status"
        android:layout_toEndOf="@id/view_status"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/text_view_medico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="4dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Abdala Junior"
            />

        <TextView
            android:id="@+id/text_view_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Data: 05/09/2016 - 12:10"
            />

        <TextView
            android:id="@+id/text_view_observacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Obs: Chegar com antecipação"
            />

    </LinearLayout>

</RelativeLayout>