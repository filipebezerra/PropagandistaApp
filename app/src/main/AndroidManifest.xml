<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.libertsolutions.washington.apppropagandista"
    >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <!-- Splash Screen -->
        <activity
            android:name=".Controller.SplashActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela de Login -->
        <activity
            android:name=".Controller.LoginActivity"
            android:label="@string/app_login"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize"
            />

        <!-- Tela Inicial -->
        <activity
            android:name=".Controller.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>

        <!-- Tela Agenda -->
        <activity
            android:name=".Controller.AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:parentActivityName=".Controller.MainActivity"
            ></activity>

        <!-- Tela Medico -->
        <activity
            android:name=".Controller.MedicoActivity"
            android:label="@string/title_activity_medico"
            android:parentActivityName=".Controller.MainActivity"
            >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity"
                />
        </activity>

        <!-- Tela Configurações -->
        <activity
            android:name=".Controller.ConfiguracaoActivity"
            android:label="@string/title_activity_configuracao"
            android:parentActivityName=".Controller.MainActivity"
            ></activity>

        <!-- Tela Cadastro de Usuário -->
        <activity
            android:name=".Controller.UsuarioActivity"
            android:label="@string/title_activity_usuario"
            android:parentActivityName=".Controller.LoginActivity"
            ></activity>

        <!-- Tela de Pesquisa -->
        <activity android:name=".Controller.MedicoSearchActivity">

            <!-- to identify this activity as "searchable" -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                />
        </activity>

        <!-- Tela Cadastrar Médico -->
        <activity
            android:name=".Controller.Medico_Cadastrar"
            android:label="@string/title_activity_novomedico"
            android:parentActivityName=".Controller.MedicoActivity"
            ></activity>

        <!-- Tela Detalhes do Médico -->
        <activity
            android:name=".Controller.Medico_details"
            android:label="@string/title_medico_details"
            android:parentActivityName=".Controller.MedicoActivity"
            ></activity>

        <!-- Tela Cadastrar Agenda -->
        <activity
            android:name=".Controller.Agenda_cadastrar"
            android:label="@string/title_agenda_cadastrar"
            android:parentActivityName=".Controller.AgendaActivity"
            ></activity>
    </application>

</manifest>
