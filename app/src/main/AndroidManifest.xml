<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.libertsolutions.washington.apppropagandista" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela de Login -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Tela Inicial -->
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <!-- Tela Agenda -->
        <activity android:name=".AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:parentActivityName=".MainActivity">
        </activity>

        <!-- Tela Medico -->
        <activity android:name=".MedicoActivity"
            android:label="@string/title_activity_medico"
            android:parentActivityName=".MainActivity">
        </activity>

        <!-- Tela Configurações -->
        <activity android:name=".ConfiguracaoActivity"
            android:label="@string/title_activity_configuracao"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>
